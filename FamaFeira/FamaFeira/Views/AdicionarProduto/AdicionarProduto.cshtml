@model ProdutoViewModel
<html>
<head>
    <link rel="stylesheet" href="../../css/Produtos.css">
</head>
<body>
    @if (TempData["erroAddProduto"] != null)
    {
        <div>
            <strong>Erro!</strong> O produto que digitou já existe.
        </div>
    }
    @if (TempData["erroSuccProduto"] != null)
    {
        <div>
            <strong>Sucesso!</strong> O produto que digitou foi adicionado com sucesso.
        </div>
    }
    <div>
        <h1>Adicionar Produto</h1>
        <form action="adicionaVendaProduto" method="post">

            <td>@Html.TextBox("codigo",null,new { @class = "form-control", placeholder="Código",style ="width:300px" })</td>
            <td>@Html.TextBox("nome",null,htmlAttributes:new { @class = "form-control", placeholder="Nome",style ="width:300px" })</td>
            <td>@Html.TextBox("imagem",null,htmlAttributes: new { @class = "form-control", placeholder="Imagem",style ="width:300px" })</td>
            <td>@Html.TextBox("preco",null,htmlAttributes:new { @class = "form-control", placeholder="Preço",style ="width:300px",type = "number", step = "1" })</td>
            <td>@Html.TextBox("user",Model.getUsername(), htmlAttributes: new { @class = "form-control", placeholder="Username",style ="width:300px;display:none" })</td><br>

            <input type="submit" onclick="adicionaVendaProduto" value="Adicionar" />
        </form>
    </div>
</body>
</html>
