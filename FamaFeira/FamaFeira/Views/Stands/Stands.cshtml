@model List<Stand>


@{
    Layout = "_Layout";
}

<html>
    <head>
        <link rel="stylesheet" href="../../css/Stands.css">
    </head>
    <body>
    <div class="grid-container">
    @foreach (var standitem in Model)
    {
            <div class="elevation">
                <div class="grid-item">
                    <div class="flex-container">
                        <img class="flex-child" src=@standitem.imagem class="flex-child" width=100px />
                        <div class="flex-child">
                            <div class="module">
                                <h4>@standitem.designacao</h4>
                                <p>@standitem.descricao</p>
                                <p>Empresa: @standitem.empresa</p>
                                <p>Recomendação: @standitem.recomendacao</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    }
    </div>
    </body>
</html>
